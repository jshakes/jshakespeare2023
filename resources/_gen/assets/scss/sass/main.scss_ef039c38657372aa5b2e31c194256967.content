:root{--background:#efede6;--foreground:#2c1902;--accent-1:#3c3ce9;--accent-2:#c0176b}@media(prefers-color-scheme:dark){:root{--background:#110805;--foreground:#eecfcf;--accent-1:#adcce3;--accent-2:#db3f8d}}*{box-sizing:border-box}*:focus{outline:.25rem solid var(--accent-2,black)}*:active{outline:none}::selection{background:var(--accent-2,black);color:var(--background,white)}body{background-color:var(--background,white);color:var(--foreground,black)}img{max-width:100%}a,label{color:var(--accent-1);cursor:pointer;text-decoration:underline}a:hover,label:hover{color:var(--accent-2)}figure{margin:0 auto 2em}figure img{display:block;margin:auto}figure figcaption{margin-top:1.5em;font-size:.8em}figure figcaption p{line-height:1}code,pre{background:rgba(0,0,0,5%)}@media(prefers-color-scheme:dark){code,pre{background:rgba(0,0,0,.25)}}html{font-size:18px}body{font-family:overpass,sans-serif}.page{max-width:42em;margin:0 auto;padding:0 1em}.masthead{margin:12vh 0 4em}.masthead__site-name{text-decoration:none;color:inherit;display:block}.masthead__site-name:hover{color:var(--accent-1)}.hero{margin:0 0 4em}.hero__hr{font-size:.6em;position:relative;clip-path:polygon(0 0,100% 0,calc(100% - .6em) 100%,-.6em 100%);-webkit-clip-path:polygon(0 0,100% 0,calc(100% - .6em) 100%,-.6em 100%);left:0;right:0;top:0;bottom:0;z-index:-1;height:1em}.hero__hr:before{content:"";position:fixed;top:0;right:0;bottom:0;left:0;z-index:-1;border-radius:inherit;background:linear-gradient(to bottom right,var(--accent-1) 20%,var(--accent-2) 80%);animation:gradient 15s ease-in infinite;background-size:300%}@keyframes gradient{0%{background-position:0}50%{background-position:100%}100%{background-position:0}}.hero__intro{font-size:1.75em;font-weight:600;margin:1.25em 0;line-height:1;letter-spacing:-.0075em}@media(min-width:768px){.hero__intro{font-size:2.5em}}.nav__items{list-style:none;padding:0;margin:0 0 4em}.nav__item{display:inline-block;margin-right:2em}.hero__availability-indicator{height:.666666em;width:.666666em;display:inline-block;border-radius:100%;background-color:#36e236;margin-right:.25em;animation:pulse 2s infinite}@keyframes pulse{0%{outline:.1em solid rgba(54,226,54,.5);transform:scale(1)}16%{transform:scale(1.1)}33%{outline:.5em solid rgba(54,226,54,0);transform:scale(1)}100%{outline:.5em solid rgba(54,226,54,0)}}.post-list{list-style:none;padding:0;margin:0}.post-list__item{margin:0 0 1em}.post-list__link{display:block}.sidebar__container{position:relative}@media(min-width:768px){.sidebar__aside{position:absolute;right:100%;top:0;width:15em;margin-right:2em}}